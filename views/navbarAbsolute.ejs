<head>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<div id="nav">
    <img src="/icon/home-line.svg" onclick="location.href='/'">
    <img src="/icon/search-2-line.svg" onclick="location.href='/<%=locals.currentUser.username%>/search'">
    <img src="<%=locals.currentUser.pfp%>" onclick="location.href='/<%=locals.currentUser.username%>'">
</div>

<style>
  #nav{
    position: fixed;
    bottom: 0;
    right: 0;
    
    background: #fff;
    border-top: 0.5px solid #aaa;
    width: 100%;
    height: 50px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    
    z-index: 1000;
    transition: transform 0.3s ease-in-out;
  }
  .hidden {
    transform: translateY(100%);
  }
  #nav img{
    border-radius: 50%;
    width: 30px;
    height: 30px;
    objet-fit: cover;
  }
</style>

<script>
  const fixedElement = document.querySelector('#nav');

  window.addEventListener('resize', () => {
    // Check if the viewport height is reduced (indicating keyboard is open)
    if (window.innerHeight < 600) { // Adjust this value based on your needs
      fixedElement.classList.add('hidden');
    } else {
      fixedElement.classList.remove('hidden');
    }
  });
  
  
  // Disable context menu for the entire page
  document.addEventListener('contextmenu', function (event) {
    event.preventDefault();
  });

</script>
